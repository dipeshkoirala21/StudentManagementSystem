
@{
    ViewBag.Title = "Index";
}
<script>
    $(document).ready(function () {
        $("#news_date").datepicker({ dateFormat: 'dd/mm/yy' });
    });

</script>
<h2>Hello @ViewBag.Fname</h2>
<br />
<form action="/Teachers/TakeAttendance" method="post">
    <table class="table table-bordered">
        <tr>
            <td>
                <b>Division : &nbsp;</b>
            </td>
            <td>
                @Html.DropDownList("GroupId", "Select Group")
            </td>
        </tr>
        <tr>
            <td>
            <b>Course : &nbsp;</b>
            </td>
            <td>
                @Html.DropDownList("ModuleId", "Select Module")
            </td>
        </tr>
        <tr>
            <td>
                <b>Date:&nbsp;</b>
            </td>
            <td>
                <input type="date" id="news_date" name="news_date" />
            </td>
        </tr>
        <tr>
            <td>
                <input type="submit" class="btn btn-success" value="Take Attendance" name="takeAttendance" />
            </td>
        </tr>
     </table>
</form>





