@model IEnumerable<FinalFinalCoursework.Models.Student>
@using FinalFinalCoursework.Models
@{
    ViewBag.Title = "TakeAttendance";
}

<h2>TakeAttendance</h2>
  <form action="/Teachers/SubmitAttendance" method="post">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                   
                    <input type="checkbox" name="attendance" value="@item.StudentID" />
                </td>
            </tr>
        }

    </table>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</form>
