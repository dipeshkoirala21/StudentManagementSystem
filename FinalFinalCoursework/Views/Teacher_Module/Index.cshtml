@*<p>
        @Html.ActionLink("Assign Modules to Teachers", "AssignModulesToTeachers", "Admin")
    </p>*@

<div style="padding-left:20rem;">
    <p>
        <div class="btn btn-success">
            @Html.ActionLink("Assign Modules to Teachers", "Create", "Teacher_Module")


        </div>
    </p>
    <table class="table table-bordered">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Mod.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tch.Name)
            </th>
            <th>
                @Html.DisplayName("GroupName")
            </th>
            <th>Action</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Mod.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tch.Name)
                </td>
                <td>
                    @{
                        var db = new ApplicationDbContext();
                        var name = db.Groups.Where(s => s.GroupID == item.GroupID).FirstOrDefault().Name;


                    }
                    @name
                </td>

                <td>
                    <div class="btn btn-danger">
                        @Html.ActionLink("Delete", "Delete", new { id1 = item.ModuleID, id2 = item.TeacherID, id3 = item.GroupID })


                    </div>
                </td>
            </tr>
        }

    </table>

</div>
