<div style="padding-left:20rem;">
    <table class="table table-bordered">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Crs.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreditHrs)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sem)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Crs.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreditHrs)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sem)
                </td>

            </tr>
        }

    </table>

