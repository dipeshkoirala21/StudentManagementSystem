@model IEnumerable<FinalFinalCoursework.Models.GroupModule>

@{
    ViewBag.Title = "Group Modules";
}

<h2>Group Modules</h2>

<p>
    @Html.ActionLink("Create New", "CreateGroupModules")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Group.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Module.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Group.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Module.Name)
            </td>
            
        </tr>
    }

</table>
