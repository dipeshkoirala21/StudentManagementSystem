
@{
    ViewBag.Title = "AssignModulesToTeachers";
}

<h2>AssignModulesToTeachers</h2>
<h3>@Html.Raw(@ViewBag.Message)</h3>
<br />
<form action="AssignModulesToTeachers" method="post">
    Module Name : &nbsp;
    @*@Html.DropDownList("CourseId", (IEnumerable<SelectListItem>)ViewBag.Courses, "Select Course") *@
    @Html.DropDownList("ModuleID", "Select-Module")
    @Html.DropDownList("GroupID","Select-Group")
    <br />
    <ul style="list-style-type:none">
        @foreach (var f in ViewBag.Teachers)
        {
            <li><input type="checkbox" name="TeacherIds" value="@f.TeacherID" />@f.Name</li>
        }

    </ul>
    <input type="submit" value="Assign" name="AssignButton" />
</form>

