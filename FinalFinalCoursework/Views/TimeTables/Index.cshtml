@using PagedList;
@using PagedList.Mvc
@model PagedList.IPagedList<FinalFinalCoursework.Models.TimeTable>



<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Index";
}

@*<h2>Index</h2>*@
<div id="wrapper">
    <div id="sidebar-wrapper">
        <ul class="sidebar-nav">
            <li>
                @Html.ActionLink("View Courses", "Index", "Courses")
            </li>
            <li>
                @Html.ActionLink("View Module - Teacher", "Index", "Teacher_Module")
            </li>
            <li>
                @Html.ActionLink("View Teachers", "Index", "CRUDTeacher")
            </li>
            <li>
                @Html.ActionLink("View Groups", "Index", "Groups")
            </li>
            <li>
                @Html.ActionLink("View Modules", "Index", "Modules")
            </li>
            <li>
                @Html.ActionLink("View Students", "Index", "Students")
            </li>

            <li>
                @Html.ActionLink("View Students Service", "StudentService", "Admin")
            </li>

            <li>
                @Html.ActionLink("View Group(SEM)-Modules", "Index", "GroupModules")
            </li>

            <li>
                @Html.ActionLink("TimeTable", "Index", "TimeTables")
            </li>

        </ul>
    </div>
</div>


<div style="padding-left:20rem;">
    <p>
        <div class="btn btn-success">
            @Html.ActionLink("Create New", "Create")

        </div>
    </p>
    @using (Html.BeginForm("Index", "TimeTables", FormMethod.Post))
    {
        <div>
            Search By GroupName : @Html.TextBox("SearchGroupName")

            <input id="Submit" type="submit" value="Filter" />
        </div><br />
    }
    <table class="table table-bordered">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model[0].Group.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Mod.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Tch.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].ClassName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].ClassType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Day)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Group.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mod.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tch.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClassName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClassType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Time)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Day)
                </td>
                <td>
                    <div class="btn btn-warning">
                        @Html.ActionLink("Edit", "Edit", new { id = item.TimeTableID })

                    </div>
                    <div class="btn btn-info">
                        @Html.ActionLink("Details", "Details", new { id = item.TimeTableID })

                    </div>
                    <div class="btn btn-danger">
                        @Html.ActionLink("Delete", "Delete", new { id = item.TimeTableID })

                    </div>
                </td>
            </tr>
        }

    </table>
    <br />
    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))

</div>